NODE_ENV=development
PORT=8000

# MySQL (Unified Restaurant Commerce Platform)
DB_HOST=localhost
DB_USERNAME=root
DB_PASSWORD=
DB_NAME=resto_app
DB_DIALECT=mysql
DB_PORT=3306

# CORS: comma-separated origins (no spaces after comma)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000

# Shopify Admin REST API (pinned version 2024-01)
# SHOPIFY_ACCESS_TOKEN = Admin API access token from Shopify admin (starts with shpat_)
SHOPIFY_STORE_DOMAIN=
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_ACCESS_TOKEN=
SHOPIFY_API_VERSION=2024-01

# Auth (JWT)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
